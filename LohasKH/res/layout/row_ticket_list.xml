<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/promoIcon"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/imgbackground"
        android:scaleType="centerCrop"
        android:src="@drawable/nopic_ticket" />

    <android.widget.ImageButton
        android:id="@+id/ticketShareBut"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/ClearColor"
        android:scaleType="centerCrop"
        android:src="@drawable/share" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/promoIcon"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/abc_dropdownitem_text_padding_right"
            android:text="我家牛排"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_title_indicator_title_padding"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/default_title_indicator_footer_padding"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/locationNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原價：$"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_title_indicator_footer_padding"
                android:text="999"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/locationAddrText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="省下：$"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/savedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/default_title_indicator_footer_indicator_underline_padding"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/restText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:text="優惠價： "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/offerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="$899!"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/RedColor" />

            <ImageButton
                android:id="@+id/shoppingBut"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@color/ClearColor"
                android:scaleType="centerInside"
                android:src="@drawable/shopping" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>