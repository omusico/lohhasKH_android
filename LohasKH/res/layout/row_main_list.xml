<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/listIcon"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/ClearColor"
        android:scaleType="centerCrop"
        android:src="@drawable/nopic" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/listIcon"
        android:background="@color/WhiteColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listIcon"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:background="@color/transparentWhite"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@color/ClearColor"
            android:gravity="left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/rowTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="a"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/BlackColor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/rowSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/abc_action_bar_icon_vertical_padding"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="b"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/BlackColor"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/collectBut"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/ClearColor"
                android:scaleType="centerCrop"
                android:src="@drawable/favor_add"
                android:text="@string/main_listrow_collect_button" />

            <ImageButton
                android:id="@+id/shareBut"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/ClearColor"
                android:scaleType="centerCrop"
                android:src="@drawable/share"
                android:text="@string/main_listrow_collect_button"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>