<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="@dimen/default_title_indicator_footer_padding"
    android:layout_marginTop="@dimen/default_title_indicator_footer_padding"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/recordDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="18dp"
        android:layout_weight="1"
        android:text="2014/05/14"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000"
        android:textSize="@dimen/activity_horizontal_margin" />

    <TextView
        android:id="@+id/recordCO2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="1111 kgCO2e"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/recordDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/default_title_indicator_footer_padding"
        android:layout_weight="1"
        android:gravity="right"
        android:text="30分鐘"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000"
        android:textSize="18dp" />

</LinearLayout>
